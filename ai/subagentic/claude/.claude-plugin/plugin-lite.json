{
  "name": "Agentic Toolkit - Lite",
  "version": "1.0.0",
  "description": "Lightweight variant with 3 core agents and no skills for minimal dependencies",
  "variant": "lite",
  "agents": [
    {
      "id": "master",
      "name": "Master",
      "description": "Central orchestration agent",
      "path": "agents/master.md"
    },
    {
      "id": "orchestrator",
      "name": "Orchestrator",
      "description": "Task orchestration and workflow management",
      "path": "agents/orchestrator.md"
    },
    {
      "id": "scrum-master",
      "name": "Scrum Master",
      "description": "Project management and team coordination",
      "path": "agents/scrum-master.md"
    },
    {
      "id": "context-initializer",
      "name": "Context Initializer",
      "description": "Initialize Claude Code context through elicitation, organize docs, create CLAUDE.md and KNOWLEDGE_BASE.md",
      "path": "agents/context-initializer.md"
    }
  ],
  "skills": [],
  "hooks": [
    {
      "name": "register-agents",
      "path": "hooks/register-agents.js",
      "event": "plugin-load"
    }
  ],
  "resources": {
    "path": "resources/",
    "types": ["templates", "data", "utils"]
  }
}
